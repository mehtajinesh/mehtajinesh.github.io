$linkBaseColor = #C8D3D5
$linkActiveColor = #FCFAFA

.nav
  ul
    list-style-type none
    text-align: center
    padding: 0
    li
      display: inline-block
      margin: 5px 10px

      a
        color: $linkBaseColor
        border-bottom-color: $linkBaseColor
        transition: 0.15s ease-in-out all
        &:hover
          color: $linkActiveColor
          border-bottom-color: $linkActiveColor
        &.active
          color: $linkActiveColor
          border-bottom-color: $linkActiveColor
