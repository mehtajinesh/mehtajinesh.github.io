$baseColor = #ecf0f1

*
  font-family: 'Open Sans', serif
  // box-sizing: border-box

html, body
  margin: 20px auto
  height: 100%
  width: 100%
  padding: 0

body
  background-color: #000033
  color: $baseColor

a
  color: $baseColor
  border-bottom: 1px solid $baseColor
  text-decoration: none;

.container
  margin: 0 auto
  width: 90%
  max-width: 900px

.text-center
  text-align: center

.text-justify
  text-align: justify

.fw-400
  font-weight: 400

img.responsive
  width: 70%
  height: auto
  margin: 0 auto

.vertical-center
  top: 50%
  transform: translateY(-50%)

.img-circle
  border-radius: 50%